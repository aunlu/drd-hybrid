<idea-plugin version="1">
  <id>com.devexperts.drd.plugin</id>
  <name>Dynamic DRD Table</name>
  <version>0.7</version>
  <vendor url="http://www.devexperts.com">DevExperts</vendor>

  <description><![CDATA[
    Plugin runs a table, which shows data races from file in real time.
  ]]></description>

  <idea-version since-build="141.0"/>
  <extensions defaultExtensionNs="com.intellij" />

  <actions>
    <action id="TableStart" class="com.devexperts.drd.plugin.TableStart" text="TableStart">
      <keyboard-shortcut keymap="$default" first-keystroke="alt shift D"/>
    </action>
  </actions>

</idea-plugin>